# EditorConfig para Eclipse OS
# https://editorconfig.org

root = true

# Configuraci√≥n general para todos los archivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Archivos Rust
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# Archivos TOML (Cargo.toml, etc.)
[*.toml]
indent_style = space
indent_size = 4

# Scripts shell
[*.sh]
indent_style = space
indent_size = 4

# Archivos Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Archivos YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Archivos JSON
[*.json]
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab
