# GPU Auto-loader Script
# Detecta qué GPU hay y carga el driver apropiado
# Prioridad: nvidiad > amdd > inteld > vesad (fallback)

# Intentar cargar nvidiad (NVIDIA)
# Si falla (no hay NVIDIA), intentará el siguiente
if nvidiad
    echo "GPU: NVIDIA driver loaded"
else if amdd
    echo "GPU: AMD driver loaded"
else if inteld
    echo "GPU: Intel driver loaded"
else
    # Fallback a vesad
    vesad
    echo "GPU: VESA generic driver loaded"
end


